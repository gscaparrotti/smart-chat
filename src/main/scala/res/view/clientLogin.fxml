    <right>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="325.0" minWidth="10.0" prefWidth="103.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="218.0" minWidth="10.0" prefWidth="190.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="325.0" minWidth="10.0" prefWidth="103.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="149.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="226.0" minHeight="10.0" prefHeight="133.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="149.0" minHeight="10.0" prefHeight="57.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="96.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="126.0" minHeight="12.0" prefHeight="35.0" />
                <RowConstraints maxHeight="96.0" minHeight="10.0" prefHeight="29.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="127.0" minHeight="0.0" prefHeight="36.0" valignment="CENTER" />
            </rowConstraints>
            <children>
                <Button id="connectButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#loginButtonAction" stylesheets="@../styles/ButtonStyle.css" text="Connect" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <Label text="Username: " textFill="#34a2ff" GridPane.rowIndex="3" />
                <TextField fx:id="usernameTextfield" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <ImageView fx:id="Defaultview" fitHeight="93" fitWidth="93" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/default.png" />
                            </image>
                        </ImageView>
                    </children>
                </StackPane>
                <Label fx:id="messageLabel" text="message to display" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2">
                    <children>

                        <Button fx:id="closeButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#closeButtonAction" stylesheets="@../styles/ButtonStyle.css">
                            <graphic>
                                <ImageView fx:id="closeView" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="..\styles\ButtonStyles.css">
                                    <image>
                                        <Image url="@../img/close.png" />
                                    </image>
                                </ImageView>
                            </graphic></Button>

                    </children>
                    <GridPane.margin>
                        <Insets right="10.0" top="10.0" />
                    </GridPane.margin>
                </HBox>
            </children>
        </GridPane>
